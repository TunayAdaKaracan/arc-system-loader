-- chase pose
function chpose(p0,p1,q)
 for i=0,7 do
  local a0=p0[i]
  local a1=p1[i]
  a0%=1 a1%=1
  if (abs(a0-a1)>0.5) then
   a0+=sgn(a1-a0)
  end
  a0=a0*(1-q)+a1*q
  p0[i]=a0%1
 end
 
 -- head
 p0[8]=p0[8]*(1-q)+p1[8]*q
end


function flip_pose(p)
 for j=0,1 do
  for i=0,1 do
   p[j*4+i+0],p[j*4+i+2]=
   p[j*4+i+2],p[j*4+i+0]
  end
 end
 for i=0,7 do
  p[i]=(0.5-p[i])%1
 end
 
-- p[8]*=-1
 p[8]=0x0.ffff-p[8]
 
end



